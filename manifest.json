{
  "manifest_version": 3,
  "name": "US House Members Directory",
  "version": "2.0",
  "description": "Search and view information about US House of Representatives members",
  "permissions": ["storage", "alarms", "notifications"],
  "host_permissions": [
    "https://housegovfeeds.house.gov/*",
    "https://member-info.house.gov/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js"
  }
}
